<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Configure Global Header Dialog"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="General">
                <items jcr:primaryType="cq:WidgetCollection">
                    <rootpath
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Rootpath"
                        name="./rootPath"
                        xtype="pathfield"/>
                    <imgurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Logo URL"
                        name="./imageurl"
                        xtype="pathfield"/>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(){&#xa;if(this.getValue()==&quot;true&quot;){&#xa;CQ.Ext.getCmp('refreshtime').show();&#xa;}&#xa;else{&#xa;CQ.Ext.getCmp('refreshtime').hide();}&#xa;}"
                            selectionchanged="function(){&#xa;if(this.getValue()==&quot;true&quot;){&#xa;CQ.Ext.getCmp('refreshtime').show();&#xa;}&#xa;else{&#xa;CQ.Ext.getCmp('refreshtime').hide();}&#xa;}"/>
                    <hdsglobalitems
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="HDS GLobal Link  Details"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <orderbuttontext
                                jcr:primaryType="cq:Widget"
                                fieldLabel="HDS Global Display Text"
                                name="./hdsglobaltext"
                                value="HDS GLobal"
                                xtype="textfield"/>
                            <hdsglobalPath
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                fieldLabel="HDS GLobal Link"
                                name="./hdsglobalPath"
                                xtype="pathfield"/>
                            <orderlinktype
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Open in new window?"
                                name="./hdsgloballinktype"
                                type="checkbox"
                                xtype="selection"/>
                           
                        </items>
                    </hdsglobalitems>
                    <hdscommunitylinkitems
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="HDS Community Link Details"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <cateringbuttontext
                                jcr:primaryType="cq:Widget"
                                defaultValue="HDS Community"
                                fieldLabel="HDS Community Text"
                                name="./hdscommunitytext"
                                xtype="textfield"/>
                            <hdsCommunityPath
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                fieldLabel="HDS Community Link"
                                name="./hdsCommunityPath"
                                xtype="pathfield"/>
                            <hdscommunitylinktype
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Open in new window?"
                                name="./hdscommunitylinktype"
                                type="checkbox"
                                xtype="selection"/>
                        </items>
                    </hdscommunitylinkitems>
                    
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Search">
                <items jcr:primaryType="cq:WidgetCollection">
                    <searchboxtext
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Search PlaceHolder Text"
                        name="./searchboxtext"
                        xtype="textfield"/>
                    <searchpathurl
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Search Path URL"
                        name="./searchpathurl"
                        xtype="pathfield"/>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
